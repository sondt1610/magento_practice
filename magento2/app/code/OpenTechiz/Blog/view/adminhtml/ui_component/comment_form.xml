<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">comment_form.comment_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Comment Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="OpenTechiz\Blog\Block\Adminhtml\Comment\Edit\SaveAndContinueButton"/>
            <button name="save" class="OpenTechiz\Blog\Block\Adminhtml\Comment\Edit\SaveButton"/>
            <button name="reset" class="OpenTechiz\Blog\Block\Adminhtml\Comment\Edit\ResetButton"/>
            <button name="delete" class="OpenTechiz\Blog\Block\Adminhtml\Comment\Edit\DeleteButton"/>
            <button name="back" class="OpenTechiz\Blog\Block\Adminhtml\Comment\Edit\BackButton"/>
        </buttons>
        <namespace>comment_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>comment_form.comment_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="comment_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="blog/comment/save"/>
        </settings>
        <dataProvider class="OpenTechiz\Blog\Model\Comment\DataProvider" name="comment_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>comment_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="comment_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">opentechiz_post_comment</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>comment_id</dataScope>
            </settings>
        </field>

        <field name="is_active" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">opentechiz_post_comment</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Is Active</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="OpenTechiz\Blog\Model\Comment\Source\Status"/>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="content" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">opentechiz_post_comment</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Content</label>
                <dataScope>content</dataScope>
            </settings>
        </field>
        <field name="post_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">opentechiz_post_comment</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Post Id</label>
                <dataScope>post_id</dataScope>
            </settings>
        </field>
        <field name="user_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">opentechiz_post_comment</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">User Id</label>
                <dataScope>user_id</dataScope>
            </settings>
        </field>
        <field name="email" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">opentechiz_post_comment</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Email</label>
                <dataScope>email</dataScope>
            </settings>
        </field>
        <field name="author" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">opentechiz_post_comment</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Author</label>
                <dataScope>author</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
